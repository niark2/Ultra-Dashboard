<section class="tab-content" id="tab-notifications">
    <header class="content-header">
        <div class="header-title">
            <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 8px;">
                <i data-lucide="bell" style="width: 32px; height: 32px; color: var(--accent-color);"></i>
                <h1 style="margin: 0;">Centre de Notifications</h1>
            </div>
            <p class="subtitle">Historique de vos activités et tâches terminées</p>
        </div>
        <div class="header-actions">
            <button class="btn-clear-notifications" id="clearAllNotifications">
                <i data-lucide="trash-2"></i> Effacer tout
            </button>
        </div>
    </header>

    <div class="notifications-container">
        <div id="notificationsList" class="notifications-list">
            <!-- Notifications will be injected here -->
            <div class="empty-notifications">
                <div class="empty-icon">
                    <i data-lucide="bell-off"></i>
                </div>
                <h3>Aucune notification</h3>
                <p>Vos nouvelles notifications apparaîtront ici.</p>
            </div>
        </div>
    </div>
</section>