<section class="tab-content" id="tab-metadata">
    <header class="content-header">
        <h1>Metadata Editor</h1>
        <p class="subtitle">Éditez les métadonnées de vos fichiers localement (Audio, Images, Vidéos)</p>
    </header>

    <div class="metadata-container">
        <!-- Directory Selector Area -->
        <div class="metadata-selector">
            <div class="input-group premium-group">
                <label for="metaFolderInput" class="btn-icon-large" title="Parcourir...">
                    <i data-lucide="folder-open"></i>
                </label>
                <input type="file" id="metaFolderInput" webkitdirectory directory multiple hidden>
                <input type="text" id="metaDirPath" placeholder="Chemin du dossier (ex: C:\Musique\Album)"
                    class="url-input">
                <button id="metaScanBtn" class="btn-convert">
                    <span class="btn-text">Scanner</span>
                </button>
            </div>
        </div>

        <!-- Toolbar -->
        <div id="metaToolbar" class="metadata-toolbar hidden">
            <div class="toolbar-left">
                <button id="metaApplyAllBtn" class="btn-convert">
                    <span class="btn-text"><i data-lucide="save" class="inline-icon"></i> Appliquer les
                        modifications</span>
                    <span class="btn-loader hidden"></span>
                </button>
                <button id="metaMagicBtn" class="btn-secondary">
                    <span class="nav-icon"><i data-lucide="sparkles"></i></span> Magic Auto-Tag
                </button>
                <span id="metaStatusText" class="status-info">0 fichiers chargés</span>
            </div>
            <div class="toolbar-right">
                <div class="search-box">
                    <input type="text" id="metaSearch" placeholder="Filtrer..." class="tool-input">
                </div>
            </div>
        </div>

        <!-- Spreadsheet Area -->
        <div class="metadata-table-container">
            <table class="metadata-table" id="metadataTable">
                <thead>
                    <tr>
                        <th class="col-type">Type</th>
                        <th class="col-filename">Fichier</th>
                        <th class="col-title">Titre</th>
                        <th class="col-artist">Artiste</th>
                        <th class="col-album">Album</th>
                        <th class="col-genre">Genre</th>
                        <th class="col-year">Année</th>
                        <th class="col-track">#</th>
                        <th class="col-actions">Actions</th>
                    </tr>
                </thead>
                <tbody id="metadataBody">
                    <!-- Données chargées dynamiquement -->
                </tbody>
            </table>

            <!-- Empty State -->
            <div id="metaEmptyState" class="empty-state">
                <div class="empty-icon"><i data-lucide="folder-open"></i></div>
                <h3>Aucun dossier sélectionné</h3>
                <p>Entrez le chemin d'un dossier pour commencer l'édition.</p>
            </div>

            <!-- Loading State -->
            <div id="metaLoading" class="loading-overlay hidden">
                <div class="loader-spinner"></div>
                <p>Analyse des fichiers...</p>
            </div>
        </div>
    </div>
</section>